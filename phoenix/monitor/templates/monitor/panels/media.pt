<div>
  <ul class="list-group">
    <li class="list-group-item" tal:repeat="item items">
      <div class="media">
        <div class="media-left media-top">
          <a href="#">
            <img class="media-object" src="${request.static_path('phoenix:static/phoenix/img/missing_thumb.png')}" alt="No Preview"/>
          </a>
        </div>
        <div class="media-body">
	  <a tal:condition="item.reference"
             class="btn btn-default btn-xs disabled pull-right"
             role="button">
            <icon class="fa fa-cart-plus"></icon>
          </a>
          <h4 class="media-heading">${item.title}</h4>
          <p><small>${item.get('abstract', 'No summary')}</small></p>
	  <table class="table">
	    <!--thead>
	      <tr>
		<th>Identifier</th>
		<th>Value</th>
	      </tr>
	    </thead-->
	    <tbody>
	      <tr>
		<th>Identifier</th>
		<td>${item.identifier}</td>
	      </tr>
	      <tr>
		<th>Value</th>
		<td>
		  <div tal:condition="item.reference">
		    ${item.reference}
		  </div>
		  <div tal:condition="item.data">
		    <span tal:repeat="data item.data">
		      ${data}
		    </span>
		  </div>
		</td>
	      </tr>
	    </tbody>
	  </table>
	  <p tal:condition="item.mime_type and item.reference">
	    <a href="${item.reference}" class="label label-warning">
	      ${item.mime_type}
	    </a>
	  </p>
          <p tal:condition="item.reference">
            <a href="${item.reference}" target="_"><i class="fa fa-download"></i> Download</a> 
            <a tal:condition="item.dataset" data-toggle="tooltip" title="Show on Map" data-value="value"
               href="${request.route_path('map', _query=[('dataset', item.dataset)])}">
              <i class="fa fa-map-marker"></i> Show on Map</a>
          </p>
        </div>
      </div>
    </li>
  </ul>
</div>

