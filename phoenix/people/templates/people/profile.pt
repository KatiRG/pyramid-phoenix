<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <div class="container">
      <div class="row">
        <h2 class="page-header">${request.user.get('name', 'Unknown')}</h2>
        <div class="col-lg-3 col-sm-3">
          <!--Sidebar content-->
          <ul class="nav nav-pills nav-stacked">
            <li class="${'active' if active=='account' else ''}"><a href="${request.route_url('profile', tab='account')}">My Account</a></li>
            <li class="${'active' if active=='twitcher' else ''}"><a href="${request.route_url('profile', tab='twitcher')}">Twitcher access token</a></li>
            <li class="${'active' if active=='esgf' else ''}"><a href="${request.route_url('profile', tab='esgf')}">ESGF access token</a></li>
          </ul>
        </div>
        <div class="col-lg-9 col-sm-9">
          <!--Body content-->
          ${panel('headings')}
        </div>
      </div>
    </div>

  </div>
   
</metal:block>
