<metal:block use-macro="main_template">

  <div metal:fill-slot="css">
    <link rel="stylesheet" type="text/css" media="screen" charset="utf-8"
          href="${request.static_url('phoenix:static/esgsearch/css/reuters.css')}" />
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/themes/smoothness/jquery-ui.css">
  </div>

  <div metal:fill-slot="javascript">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/jquery-ui.min.js"></script>
    
    <script src="${request.static_url('phoenix:static/esgsearch/js/esgsearch.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/core/Core.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/core/AbstractManager.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/managers/Manager.jquery.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/core/Parameter.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/core/ParameterStore.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/core/AbstractWidget.js')}"></script>
    <script src="${request.static_url('phoenix:static/esgsearch/widgets/ResultWidget.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/widgets/jquery/PagerWidget.js')}"></script>
    <script src="${request.static_url('phoenix:static/ajax-esgf/core/AbstractFacetWidget.js')}"></script>
    <script src="${request.static_url('phoenix:static/esgsearch/widgets/TagcloudWidget.js')}"></script>
  </div>
  
  <div metal:fill-slot="content">

    <legend>
      <h3>${title}</h3>
      <small>${description}</small>
    </legend>  

    <tal:form replace="structure form">The form will render here</tal:form>

  </div>
</metal:block>
