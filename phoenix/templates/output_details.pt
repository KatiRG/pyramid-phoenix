<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/output-details.js')}"></script>
  </div>
        
  <div metal:fill-slot="content">

    <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">/</span></li>
      <li><a href="/jobs">My Jobs</a> <span class="divider">/</span></li>
      <li class="active">Ouput Details</li>
    </ul>

    <div class="page-header">
      <h1>${title} <small>${description}</small></h1>
    </div>    

    <table class="table table-striped">
      <tal:rows replace="structure grid" />
    </table>

     <!-- Add form for publishing to csw -->
    <div id="publish-form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="user-form-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="publish-form-label">Publish to Catalog Service</h3>
      </div>
      <div class="modal-body">
        <tal:form replace="structure form" />
      </div>
    </div>

  </div>
   
</metal:block>
