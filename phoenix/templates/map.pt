<metal:block use-macro="main_template">

  <div metal:fill-slot="css">
    <link rel="stylesheet" type="text/css" media="screen" charset="utf-8"
          href="${request.static_url('phoenix:static/ol/theme/default/style.css')}" />
    <style>
      #map {
      width: 900px;
      height: 450px;
      }
    </style>
    <style>
      #slider {
      width: 300px;
      margin: 10px;
      }
    </style>
  </div>

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/ol/OpenLayers.js')}"></script>
    <script src="${request.static_url('phoenix:static/readymap/readymap-debug.js')}"></script>
    <script src="${request.static_url('phoenix:static/js/wps.js')}"></script>
    <script src="${request.static_url('phoenix:static/js/map.js')}"></script>
    <script type="text/javascript">
      $(document).ready(function (e) {
         initMap();
      });
    </script>
  </div>

  <div metal:fill-slot="content">
    <div id="map"></div>
    <div id="animate">
      <table>
        <tr>
          <td>
            <label id="time">2006-01-01T12:00</label>
          </td>
          <td>
            <div id="slider"/>
          </td>
          <td>
            <button id="prev" class="icon-step-backward"/>
            <button id="next" class="icon-step-forward"/>
            <button id="play" class="icon-play"/>
            <button id="stop" class="icon-stop"/>
          </td>
          <td>
            <select id="select"/>
          </td>
        </tr>
      </table>
      <div id="dialog-play" title="Run Animation?">
        <table>
          <tr>
            <td>
              <label id="time-range">2006-01-01T12:00 - 2006-01-01T12:00</label>
            </td>
          </tr>
          <tr>
            <td>
              <div id="slider-range"/>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

</metal:block>
