<metal:block use-macro="main_template">
  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/scripts/authomatic.js')}"></script>
    <!-- script src="${request.static_url('phoenix:static/scripts/account.js')}"></script -->
  </div>
 
  <div metal:fill-slot="content">
    <ul class="nav nav-pills">
      <li role="presentation" class="${'active' if active=='esgf' else ''}">
        <a href="${request.route_path('account_login', protocol='esgf')}">ESGF</a>
      </li>
      <li role="presentation" class="${'active' if active=='openid' else ''}">
        <a href="${request.route_path('account_login', protocol='openid')}">OpenID</a>
      </li>
    </ul>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">${title}</h3>
      </div>
      <div class="panel-body">
        <tal:form replace="structure form">The form will render here</tal:form>
      </div>
    </div>

  </div>

</metal:block>
