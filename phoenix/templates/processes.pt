<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <!--! Button to trigger modal dialog to select wps -->
    <a href="#choose-wps" role="button" class="btn btn-success" data-toggle="modal">
      Choose WPS
    </a>

    <table class="table table-striped">
      <tal:rows replace="structure grid" />
    </table>

    <!-- form for WPS -->
    <div id="choose-wps" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title">Choose WPS</h4>
          </div>
          <div class="modal-body">
            <tal:form replace="structure form" />
          </div>
        </div>
      </div>
    </div>
    
  </div>
   
</metal:block>
