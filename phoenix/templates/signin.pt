<metal:block use-macro="main_template">
 
  <div metal:fill-slot="content">

    <ul class="nav nav-tabs">
      <li class="${'active' if active=='esgf' else ''}"><a href="${request.route_url('signin', tab='esgf')}">ESGF</a></li>
      <li class="${'active' if active=='openid' else ''}"><a href="${request.route_url('signin', tab='openid')}">OpenID</a></li>
      <li class="${'active' if active=='ldap' else ''}"><a href="${request.route_url('signin', tab='ldap')}">LDAP</a></li>
    </ul>
    
     <!-- row columns -->
     <div class="row-fluid offset1">
       ${panel('headings')}
     </div>

  </div>

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/authomatic.js')}"></script>
    <script src="${request.static_url('phoenix:static/js/signin.js')}"></script>
  </div>
</metal:block>
