<metal:block use-macro="main_template">

  <div metal:fill-slot="content">
    
    <div class="jumbotron">
      <div class="container">
        <h1>Welcome</h1>
        <p>Phoenix is a web application to make it easy to interact with <a href="http://geoprocessing.info/">Web Processing Services</a>.</p>
        <p>If you have any questions about the software or service, join our <a href="http://birdhouse.readthedocs.io/en/latest/contributing.html">mailing list or chat</a>.</p>
        <span>Need help? <a href="${request.route_url('readthedocs', part='tutorial')}" target="_">Getting Started</a></span>
      </div>
    </div>

     <!-- info boxes -->
     <div class="container">
       <div class="row">
         <div class="col-md-3 text-center">
           <a class="btn btn-success" href="${request.route_url('processes')}">
             <span class="fa fa-cogs fa-3x"></span>
           </a>
           <h4><b>Run your processes.</b></h4>
           <h5>Choose a process from a Web Processing Service and start it.</h5>
         </div>
         <div class="col-md-3 text-center">
           <a class="btn btn-success" href="${request.route_url('wizard')}">
             <span class="fa fa-magic fa-3x"></span>
           </a>
           <h4><b>Use the Wizard to feed your jobs with data.</b></h4>
           <h5>Use the wizard to feed your processes with data from ESGF and Thredds Data Servers.</h5>
         </div>
         <div class="col-md-3 text-center">
           <a class="btn btn-success" href="${request.route_url('monitor')}">
             <span class="fa fa-tasks fa-3x"></span>
           </a>
           <h4><b>Monitor your jobs.</b></h4>
           <h5>Monitor the status of your running jobs/processes.</h5>
         </div>
         <div class="col-md-3 text-center">
           <a class="btn btn-success" href="${request.route_url('map')}">
             <span class="fa fa-map-marker fa-3x"></span>
           </a>
           <h4><b>Show your results on a map.</b></h4>
           <h5>Use the map to visualize your processing results and input data.</h5>
         </div>
       </div>            
     </div>
    
  </div>

</metal:block>
