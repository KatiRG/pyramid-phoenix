<metal:block use-macro="main_template">

  <div metal:fill-slot="content">
    
    <div class="intro-block">
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <img class="img-responsive tpad" src="${request.static_url('phoenix:static/images/Phoenix.jpg')}">
          </div>
          <div class="col-xs-9">
            <h1>Phoenix <span class="text-muted">&raquo; Making WPS easy</span></h1>
            <p class="lead"> This is a <b>Demo</b> installation. If you want to try it out please <a class="btn btn-mini btn-success" href="${request.route_path('account_register')}">Sign up</a> and ask for account activation.</p>
          </div>
        </div>
      </div>       
    </div>

     <!-- info boxes -->
     <div class="container padded">
       <div class="row">
         <div class="col-sm-6 col-md-3">
           <img class="img-circle img-responsive center-block" src="${request.static_path('phoenix:static/images/user_catwomen.png')}">
           <h3>Processes</h3>
           <p>Run Processes ...</p>
           <p><a class="btn btn-default" href="${request.route_path('processes_overview')}">View details &raquo;</a></p>            
         </div>
         <div class="col-sm-6 col-md-3">
           <img class="img-circle img-responsive" src="${request.static_path('phoenix:static/images/user_catwomen.png')}">
           <h3>Monitor Jobs</h3>
           <p>Monitor Job execution ...</p>
           <p><a class="btn btn-default" href="${request.route_path('myjobs_overview')}">View details &raquo;</a></p>            
         </div>
         <div class="clearfix hidden-md hidden-lg">                 
         </div>
         <div class="col-sm-6 col-md-3">
           <img class="img-circle img-responsive" src="${request.static_path('phoenix:static/images/user_catwomen.png')}">
           <h3>Wizard</h3>
           <p>Use data sources to run processes ...</p>
           <p><a class="btn btn-default" href="${request.route_path('wizard')}">View details &raquo;</a></p>            
         </div>
         <div class="col-sm-6 col-md-3">
           <img class="img-circle img-responsive" src="${request.static_path('phoenix:static/images/user_catwomen.png')}">
           <h3>Quickstart</h3>
           <p>Quickstart guide to getting startet with using Phoenix.</p>
           <p><a class="btn btn-default" href="${request.route_url('readthedocs')}">View details &raquo;</a></p>            
         </div>
       </div>            
     </div>
    
  </div>

</metal:block>
