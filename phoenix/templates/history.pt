<metal:block use-macro="main_template">

    <div metal:fill-slot="content">
        <table id="process_table" class="table table-condensed accordion-group" style="table-layout: fixed; word-wrap: break-word;">
            <thead>
                <tr>
                    <th>Identifier</th>
                    <th>Start Time</th>
                    <th>Duration</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <div tal:repeat="p history">
                    <tr>
                        <td><a rel="tooltip" data-placement="right" title="ID: ${p.uuid}">${p.identifier}</a></td>
                        <td>${p.starttime}</td>
                        <td>${p.duration}</td>
                        <td tal:condition="p.status in ['ProcessAccepted', 'ProcessStarted', 'ProcessPaused']">
                            <small>${p.status}</small>
                            <div class="progress progress-info">
                                <div class="bar" style="width: ${p.progress}%;">${p.progress}%</div>
                            </div>
                        </td>
                        <td tal:condition="p.status == 'ProcessSucceeded'">
                            <a href="/output_details?uuid=${p.uuid}" class="label label-success">${p.status}</a>
                        </td>
                        <td tal:condition="p.status == 'ProcessFailed'">
			    <a href="#" class="label label-warning" data-toggle="popover" data-placement="left" data-content="${p.error_message}" data-original-title="Error Message">${p.status}</a>
                        </td>
                        <td tal:condition="p.status == 'Exception'">
                            <a href="#" class="label label-important" data-toggle="popover" data-placement="left" data-content="${p.error_message}" data-original-title="Error Message">${p.status}</a>
                        </td>
                    </tr>
                    <tr>                    
                </div>
            </tbody>
        </table>
        
        <script type="text/javascript">
            $(function(){
                $('body').popover({
                    selector: '[data-toggle="popover"]'
                });
                
                $('body').tooltip({
                    selector: 'a[rel="tooltip"], [data-toggle="tooltip"]'
                });
            });
        </script>
    </div>

</metal:block>
