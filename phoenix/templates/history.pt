<metal:block use-macro="main_template">

    <div metal:fill-slot="content">
        <table id="process_table" class="table table-condensed accordion-group" style="table-layout: fixed; word-wrap: break-word;">
            <thead>
                <tr>
                    <th>Identifier</th>
                    <th>Start Time</th>
                    <th>Duration</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <div tal:repeat="p history">
                    <tr>
                        <td><a rel="tooltip" data-placement="right" title="ID: ${p.uuid}">${p.identifier}</a></td>
                        <td>${p.starttime}</td>
                        <td>${p.duration}</td>
                        <td tal:condition="p.status[0] == 1">
                            <small>${p.status[1]}</small>
                            <div class="progress progress-info">
                                <div class="bar" style="width: ${p.status[2]}%;">${p.status[2]}%</div>
                            </div>
                        </td>
                        <td tal:condition="p.status[0] == 2">
                            <a href="/output_details?uuid=${p.uuid}" class="label label-${p.status[2]}">${p.status[1]}</a>
                        </td>
                        <td tal:condition="p.status[0] == 3">
                            <span class="label label-${p.status[2]}">${p.status[1]}</span>
                        </td>
                        <td tal:condition="p.status[0] == 4">
                            <a href="#" class="label label-${p.status[2]}" data-toggle="popover" data-placement="left" data-content="${p.status[3]}" data-original-title="Error Message">${p.status[1]}</a>
                        </td>
                    </tr>
                    <tr>                    
                </div>
            </tbody>
        </table>
        
        <script type="text/javascript">
            $(function(){
                $('body').popover({
                    selector: '[data-toggle="popover"]'
                });
                
                $('body').tooltip({
                    selector: 'a[rel="tooltip"], [data-toggle="tooltip"]'
                });
            });
        </script>
    </div>

</metal:block>
