<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
          <!--Sidebar content-->
           <ul class="nav nav-pills nav-stacked">
             <li class="${'active' if active=='profile' else ''}"><a href="${request.route_url('myaccount', tab='profile')}">Profile</a></li>
             <li class="${'active' if active=='esgf' else ''}"><a href="${request.route_url('myaccount', tab='esgf')}">ESGF</a></li>
             <li class="${'active' if active=='swift' else ''}"><a href="${request.route_url('myaccount', tab='swift')}">Swift</a></li>
           </ul>
        </div>
        <div class="span10">
          <!--Body content-->
          ${panel('headings')}
        </div>
      </div>
    </div>

  </div>
   
</metal:block>
