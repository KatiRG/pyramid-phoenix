<div class="container">
    <div class="navbar navbar-static-top">
      <div class="navbar-inner">
        
        <!-- title -->
        <a class="brand" href="/">${title}</a>
        
        <!-- links -->
        <ul class="nav">
          <div tal:repeat="item nav" class="nav"> <!-- loop over navigation items -->
            <!-- no dropdowns -->
            <div tal:condition="python:len(item['dropdowns']) == 0">
              <li class="${'active' if item['active'] else ''}">
                <a href="${item['url']}"><i class="${item['icon']}"></i> ${item['name']}</a>
              <li>
            </div>
            <!-- with dropdowns -->
            <div tal:condition="python:len(item['dropdowns']) > 0">
              <li class="nav dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" data-target="#"><i class="${item['icon']}"></i> ${item['name']}</a>
                <b class="caret"></b>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                  <li tal:repeat="subitem item['dropdowns']">
                    <a href="${subitem['url']}"><i class="${subitem['icon']}"></i> ${subitem['name']}</a>
                  </li>
                </ul>
              </li>
            </div> <!-- dropdowns end -->
          </div> <!-- loop end -->
        </ul>
        
        <!-- sign-in -->
        <div class="pull-right">
          <ul class="nav pull-right">
            <li class="${'active' if login else ''}">
              ${request.login_button}
            </li>
          </ul>
        </div>
       
      </div>
    </div>
</div>
