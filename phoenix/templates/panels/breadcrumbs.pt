<ul class="breadcrumb" tal:condition="len(breadcrumbs) > 1">
  <tal:repeat tal:repeat="item breadcrumbs">
    <li tal:define="first repeat.item.start; last repeat.item.end"
        class="${last and 'active' or None}">
      <a tal:omit-tag="last" href="${request.route_url(item.route_name)}"><i tal:condition="first" class="icon-home"></i><span tal:condition="not first">${item.title}</span></a> <span class="divider" tal:condition="not last">/</span></li>
  </tal:repeat>
</ul>
