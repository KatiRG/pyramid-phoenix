<div class="span8">
  <h3>ESGF OpenID</h3>
  <form id="esgf" action="/login/openid">
    <input type="radio" name="provider" value="dkrz" checked="checked"> <img src="${request.static_url('phoenix:static/images/flags/Germany.png')}"> DKRZ
    <input type="radio" name="provider" value="ipsl"> <img src="${request.static_url('phoenix:static/images/flags/France.png')}"> IPSL<br>
    <input type="text" name="username" placeholder="Your username"/>
    <button type="submit" class="btn btn-success">Sign in</button>
    <span class="help-block">
      Choose your ESGF OpenID provider and enter your username
    </span>
  </form>
</div>
