<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/scripts/myjobs.js')}"></script>
  </div>

  <div metal:fill-slot="content">

    <!-- Button to remove jobs -->
    <a class="remove-myjobs btn btn-danger" href="${request.route_path('remove_myjobs')}" role="button">
      Remove all
    </a>
    <br/><br/>

    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped">
          <tal:rows replace="structure grid" />
        </table>
      </div>
    </div>

  </div>
   
</metal:block>
