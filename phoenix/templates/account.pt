<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/account.js')}"></script>
  </div>

  <div metal:fill-slot="content">

    <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">/</span></li>
      <li class="active">${title}</li>
    </ul>

    <div class="page-header">
      <h1>${title} <small>${description}</small></h1>
    </div>    

    <!-- Button to trigger modal dialog for credentials update -->
    <a href="#account-form" role="button" class="btn btn-success" data-toggle="modal">
      Update Credentials
    </a>
    <!-- Button to update token -->
    <a class="user-update-token btn btn-success" href="#" role="button">
      Update Token
    </a>
    <br/><br/>

    <tal:form replace="structure form">The form will render here</tal:form>

    <!-- Add form for Credentials -->
    <div id="account-form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="task-form-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="task-form-label">Update your ESGF Credentials</h3>
      </div>
      <div class="modal-body">
        <tal:form replace="structure form_credentials" />
      </div>
    </div>
  </div>
   
</metal:block>
