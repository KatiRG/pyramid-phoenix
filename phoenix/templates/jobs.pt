<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/jobs.js')}"></script>
  </div>

  <div metal:fill-slot="content">

    <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">/</span></li>
      <li class="active">My Jobs</li>
    </ul>

    <div class="page-header">
      <h1>My Jobs<small>Subtext for header</small></h1>
    </div>    

    <!-- Button to remove jobs -->
    <a class="job-refresh btn btn-success" href="#" role="button">
      Refresh
    </a>

    <!-- Button to remove jobs -->
    <a class="job-delete-all btn btn-danger" href="#" role="button">
      Remove all
    </a>
    <br/><br/>

    <table class="table table-striped">
      <tal:rows replace="structure grid" />
    </table>

  </div>
   
</metal:block>
