<metal:block use-macro="main_template">

  <div metal:fill-slot="css">
    <link rel="stylesheet" type="text/css" media="screen" charset="utf-8"
          href="${request.static_url('phoenix:static/css/csw.css')}" />
  </div>

  <div metal:fill-slot="javascript">
    <!-- leaflet -->
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.ie.css" /><![endif]-->
    <script type="text/javascript" src="http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.js"></script>
    <script src="${request.static_url('phoenix:static/js/csw.js')}"></script>
    <script type="text/javascript">
      $(document).ready(function (e) {
         initMap();
      });
    </script>
  </div>
        
  <div metal:fill-slot="content">
    <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">/</span></li>              
      <li><a href="/wizard">Wizard</a> <span class="divider">/</span></li>
      <li class="active">${title}</li>
    </ul>

    <div class="page-header">
      <h1>${title} <small>${description}</small></h1>
    </div>    

    <div class="row-fluid">
      <form class="form-search" method="POST" action="">
        <div class="span4" id="div-map">Map</div>
        
        <div class="span8">
          <input type="text" name="query" class="input-medium search-query" placeholder="Search Terms">
          <table class="table table-bordered table-striped" id="table-csw-results">
            <tal:rows replace="structure grid" />
          </table>

          <div class="pagination">
            <ul>
              <li><a href="#">Prev</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </div>
        </div>
      </form>
      
      <form method="POST" action="">
        <div class="span12 well well-small">
          <button class="btn" type="submit" name="previous">Previous</button>
          <button class="btn btn-primary" type="submit" name="next">Next</button>
          <button class="btn" type="submit" name="cancel">Cancel</button>
        </div>
      </form>

    </div>

  </div>
   
</metal:block>
