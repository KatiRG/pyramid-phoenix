<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/esgsearch.js')}"></script>
    <script src="${request.static_url('phoenix:static/js/esgsearch-ui.js')}"></script>
  </div>
        
  <div metal:fill-slot="content">
    <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">/</span></li>              
      <li><a href="/wizard">Wizard</a> <span class="divider">/</span></li>
      <li class="active">${title}</li>
    </ul>

    <div class="page-header">
      <h1>${title} <small>${description}</small></h1>
    </div>    

    <tal:form replace="structure form">The form will render here</tal:form>
     
  </div>
   
</metal:block>
