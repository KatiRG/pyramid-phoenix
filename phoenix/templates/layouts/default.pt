<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><tal:title condition="view.title | None">${view.title} &mdash; </tal:title>Phoenix</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Phoenix Pyramid App for Web Processing Services">
    <meta name="author" content="Birdhouse">

    <!-- CSS
         ======================================================================= -->

    <link rel="stylesheet"
          href="${request.static_url('deform:static/css/bootstrap.min.css')}"
          type="text/css" media="screen" charset="utf-8"/>
    <link rel="stylesheet"
          href="${request.static_url('deform:static/css/form.css')}"
          type="text/css" media="screen" charset="utf-8"/>
    <tal:block repeat="reqt css_links|[]">
      <link rel="stylesheet" href="${request.static_url(reqt)}" type="text/css" />
    </tal:block>

    <!--
    <style type="text/css">
      .linenodiv pre {
      word-break: normal;
      }
    </style>
    -->
    
    <link rel="stylesheet" type="text/css" media="screen" charset="utf-8"
          href="${request.static_url('phoenix:static/css/phoenix.css')}" />

    <!-- tagmanager -->
    <link rel="stylesheet" type="text/css" media="screen" charset="utf-8"
          href="${request.static_url('phoenix:static/bootstrap-tagmanager/bootstrap-tagmanager.css')}" />

    <metal:css define-slot="css"/>

    <!-- JavaScript 
         ======================================================================= -->
    <script src="${request.static_url('deform:static/scripts/jquery-2.0.3.min.js')}"
            type="text/javascript"></script>
    <script src="${request.static_url('deform:static/scripts/bootstrap.min.js')}"
            type="text/javascript"></script>

    <!-- deform used for own widget ... TODO: add on demand -->
    <script src="${request.static_url('deform:static/scripts/jquery.form-3.09.js')}"
            type="text/javascript"></script>
    <script src="${request.static_url('deform:static/scripts/deform.js')}"
            type="text/javascript"></script>
    <script src="${request.static_url('deform:static/scripts/modernizr.custom.input-types-and-atts.js')}"
            type="text/javascript"></script>

    <tal:block repeat="reqt js_links|[]">
      <script type="text/javascript" src="${request.static_url(reqt)}"></script>
    </tal:block>

    <!-- phoenix -->
    <script src="${request.static_url('phoenix:static/scripts/phoenix.js')}"></script>

    <!-- tagmanager -->
    <script src="${request.static_url('phoenix:static/bootstrap-tagmanager/bootstrap-tagmanager.js')}"></script>
  
    <metal:js define-slot="javascript"/>   
    
  </head>

  <body>
    ${panel('navbar')}

    <div class="container">
      <div class="row">
        <!-- main page -->
        <div class="col-9 col-lg-9 col-sm-9">
          <!-- breadcrumb navigation -->
          <div>
            ${panel('breadcrumbs')}
          </div>

          <!-- Page Title -->
          <div class="page-header" tal:condition="view.description | None">
            <h1>${view.title} <small>${view.description}</small></h1>
          </div>

          <metal:content define-slot="content">
            Site content goes here ...
          </metal:content>
        </div>
        
        <!-- sidebar -->
        <div class="col-3 col-lg-3 col-sm-3">
          ${panel('sidebar')}
        </div>
      </div><!-- row -->
    </div><!-- fluid container -->

    <!-- footer -->
    ${panel('footer')}
      
  </body>
</html>
