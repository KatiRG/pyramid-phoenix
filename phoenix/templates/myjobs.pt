<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/myjobs.js')}"></script>
  </div>

  <div metal:fill-slot="content">

    <!-- Button to remove jobs -->
    <a class="remove-myjobs btn btn-danger" href="${request.route_url('remove_myjobs')}" role="button">
      Remove all
    </a>
    <br/><br/>

    <table class="table table-striped">
      <tal:rows replace="structure grid" />
    </table>

  </div>
   
</metal:block>
