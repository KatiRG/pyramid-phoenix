<span tal:define="name name|field.name;
                  size size|field.widget.size;
                  css_class css_class|field.widget.css_class;
                  oid oid|field.oid;
                  mask mask|field.widget.mask;
                  mask_placeholder mask_placeholder|field.widget.mask_placeholder;
                  style style|field.widget.style|None;
"
      tal:omit-tag="">

  <label id="search-label-counts">placeholder</label>

  <h4>Currents Selection</h4>

  <input type="text" name="Current Selection" class="tm-selection" 
         id="tm-selection"/>
  <input type="hidden" value="${cstruct}" name="${name}"
	 id="${oid}">
  <p/>

  <h4>Search Categories</h4>
  
  <input type="text" name="Search Categories" class="tm-facets"
	 id="tm-facets"/>
  <p/>
 
  <h4 id="search-label-category">placeholder</h4>
    
  <input type="text" name="Categorie: xxx" class="tm-facet"
	 id="tm-facet"/>
  <p/>
  
  <script type="text/javascript">
    deform.addCallback(
      '${oid}',
      function (oid) {
        $.EsgSearch( {oid: oid } );
    });
  </script>
</span>


