<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/catalog.js')}"></script>
  </div>
        
  <div metal:fill-slot="content">

     <ul class="breadcrumb">
       <li><a href="/"><i class="icon-home"></i></a> <span class="divider">/</span></li>
       <li><a href="/settings">Settings</a> <span class="divider">/</span></li>
      <li class="active">Catalog</li>
    </ul>

    <div class="page-header">
      <h1>${title} <small>${description}</small></h1>
    </div>    

    <!-- Button to trigger modal dialog for adding ogc service to catalog -->
    <a href="#service-form" role="button" class="btn btn-success" data-toggle="modal">
      Add Service
    </a>
    <!-- Button to trigger modal dialog for adding dataset to catalog -->
    <a href="#dataset-form" role="button" class="btn btn-success" data-toggle="modal">
      Add Dataset
    </a>

    <br/><br />

    <table class="table table-striped">
      <tal:rows replace="structure grid" />
    </table>

    <!-- Add form for service addition -->
    <div id="service-form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="service-form-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="service-form-label">Add OGC Service to Catalog</h3>
      </div>
      <div class="modal-body">
        <tal:form replace="structure service_form" />
      </div>
    </div>

    <!-- Add form for dataset addition -->
    <div id="dataset-form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="dataset-form-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="dataset-form-label">Add Dataset to Catalog</h3>
      </div>
      <div class="modal-body">
        <tal:form replace="structure dataset_form" />
      </div>
    </div>

  </div>
   
</metal:block>
