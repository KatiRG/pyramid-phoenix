<metal:block use-macro="main_template">

  <div metal:fill-slot="javascript">
    <script src="${request.static_url('phoenix:static/js/catalog.js')}"></script>
  </div>
        
  <div metal:fill-slot="content">

     <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">/</span></li>
       <li><a href="/settings">Settings</a> <span class="divider">/</span></li>
      <li class="active">Catalog</li>
    </ul>

    <div class="page-header">
      <h1>${title} <small>${description}</small></h1>
    </div>    

    <!--! Button to trigger modal dialog for adding ogc service to catalog -->
    <a href="#add-service-form" role="button" class="btn btn-success" data-toggle="modal">
      Add Service
    </a>
    <br/><br />

    <table class="table table-striped">
      <tal:rows replace="structure grid" />
    </table>

    <!--! Add form for service addition -->
    <div id="add-service-form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="add-service-form-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="add-service-form-label">Add OGC Service to Catalog</h3>
      </div>
      <div class="modal-body">
        <tal:form replace="structure form" />
      </div>
    </div>

  </div>
   
</metal:block>
