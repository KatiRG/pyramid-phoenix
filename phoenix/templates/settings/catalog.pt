<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <!-- Button to add an ogc service -->
    <a href="${request.route_path('settings_add_service')}" role="button" class="btn btn-success">
      Add Service
    </a>
    <!-- Button to add a dataset -->
    <a href="${request.route_path('settings_add_dataset')}" role="button" class="btn btn-success">
      Add Dataset
    </a>
    <!-- Button to remove all records -->
    <a href="${request.route_path('remove_all_records')}" role="button" class="btn btn-danger">
      Remove all Datasets
    </a>

    <div>
      <h2>${datasets_found} Datasets found</h2>
    </div>

    <br/><br />

    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped" tal:condition="grid | None">
          <tal:rows replace="structure grid" />
        </table>
      </div>
    </div>

  </div>
   
</metal:block>
