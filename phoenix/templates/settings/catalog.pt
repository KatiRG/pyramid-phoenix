<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <!-- Button to add an ogc service -->
    <a href="${request.route_path('settings_add_service')}" role="button" class="btn btn-success">
      Add Service
    </a>
    <!-- Button to trigger modal dialog for adding dataset to catalog -->
    <a href="#dataset-form" role="button" class="btn btn-success" data-toggle="modal">
      Add Dataset
    </a>
    <!-- Button to remove all records -->
    <a href="${request.route_path('remove_all_records')}" role="button" class="btn btn-danger">
      Remove all Datasets
    </a>

    <div>
      <h2>${datasets_found} Datasets found</h2>
    </div>

    <br/><br />

    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped" tal:condition="grid | None">
          <tal:rows replace="structure grid" />
        </table>
      </div>
    </div>

    <!-- Add form for dataset addition -->
    <div id="dataset-form" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title" id="dataset-form-label">Add Dataset to Catalog</h4>
          </div>
          <div class="modal-body">
            <tal:form replace="structure dataset_form" />
          </div>
        </div>
      </div>
    </div>

  </div>
   
</metal:block>
