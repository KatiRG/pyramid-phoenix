<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Supervisor
          <div class="btn-group pull-right">
            <a class="btn btn-danger" href="${request.route_path('supervisor_program', action='restart', name='all')}"><i class="fa fa-lg fa-refresh"></i></a>
            <a class="btn btn-danger" href="${request.route_path('supervisor_program', action='stop', name='all')}"><i class="fa fa-lg fa-stop"></i></a>
          </div>
        </h4>
      </div>
      <div class="panel-body">
        <table class="table table-striped" tal:condition="grid | None">
          <tal:rows replace="structure grid" />
        </table>
      </div>
    </div>

  </div>
   
</metal:block>
