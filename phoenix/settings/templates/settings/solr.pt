<metal:block use-macro="main_template">
        
  <div metal:fill-slot="content">
    
    <div class="panel panel-default">
       <div class="panel-heading">
        <span class="panel-title">
          <a href="${request.route_path('settings')}">
            <i class="fa fa-fw fa-chevron-left" ></i>
          </a>
          Solr
          <div class="pull-right">
            <a class="btn btn-danger btn-xs"
               rel="tooltip"
               data-toggle="tooltip"
               title="Clear Solr Index"
               href="${request.route_path('clear_index')}">
              Clear Solr Index
            </a>
          </div>
        </span>
      </div>
      <div class="panel-body">
        <ul class="list-group">
          <li class="list-group-item" tal:repeat="item items">
            <div class="media">
              <span class="pull-left" aria-hidden="true">
                <a href=""><i tal:attributes="class 'fa fa-toggle-on' if item.status=='new' else 'fa fa-toggle-off'"></i></a>
              </span>
              <div class="media-body">
                <h4 class="media-heading">${item.title}</h4>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>

  </div>
   
</metal:block>
