<metal:block use-macro="main_template">

  <div metal:fill-slot="content">

    <!-- Button to add an ogc service -->
    <a href="${request.route_path('settings_register_service')}" role="button" class="btn btn-success">
      Register a new Service
    </a>

    <div>
      <h2>${datasets_found} Services found</h2>
    </div>

    <br/><br />

    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped" tal:condition="grid | None">
          <tal:rows replace="structure grid" />
        </table>
      </div>
    </div>

  </div>
   
</metal:block>
