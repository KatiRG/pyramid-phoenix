<div class="panel panel-default">
  <div class="panel-heading">
    <span class="panel-title">
      ${title}
      <div tal:condition="request.has_permission('submit')" class="pull-right">
        <a class="btn btn-danger btn-xs"
           rel="tooltip"
           data-toggle="tooltip"
           title="Forget ESGF credential"
           href="${request.route_path('forget_esgf_certs')}">
          Forget Credential
        </a>
      </div>
    </span>
  </div>
  <div class="panel-body">
    <tal:form replace="structure form">The form will render here</tal:form>
  </div>
</div>
